game ContentPlace

-- 3x3 board of Int
-- Content = Int
type Board = Array (3,3) of Int

positive : Board
positive!(x,y) = 1

-- Content describes the type of the pieces on the board
-- which are 'Int', as noted above ^
placePositive : (Content, Board, (Int, Int)) -> Board
placePositive(c, b, p) = if c > 0 then place(c, b, p) else b
